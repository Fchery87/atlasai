{
  "name": "boltforge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc -b --noEmit",
    "lint": "eslint . --config eslint.config.js",
    "test": "vitest run",
    "test:ui": "vitest",
    "e2e": "playwright test",
    "prepare": "husky",
    "precommit:lint": "lint-staged",
    "security": "npm run security:audit && npm run security:osv",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:osv": "node scripts/osv-scan.js",
    "electron:dev": "NODE_ENV=development electron electron/dist/main.js",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:start": "npm run build && npm run electron:build && electron .",
    "electron:package": "npm run build && npm run electron:build && electron-builder",
    "electron:package:win": "npm run electron:package -- --win",
    "electron:package:mac": "npm run electron:package -- --mac",
    "electron:package:linux": "npm run electron:package -- --linux",
    "pwa:icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "jszip": "^3.10.1",
    "monaco-editor": "^0.52.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.48.2",
    "@types/node": "^24.8.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-squirrel-startup": "^1.0.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "jsdom": "^27.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --config eslint.config.js --fix"
    ]
  }
}
